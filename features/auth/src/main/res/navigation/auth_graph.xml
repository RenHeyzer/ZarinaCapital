<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/auth_graph"
    app:startDestination="@id/sign_in">

    <fragment
        android:id="@+id/sign_up"
        android:name="com.ren.auth.internal.presentation.ui.fragments.SignUpFragment"
        android:label="@string/sign_up_screen"
        tools:layout="@layout/fragment_sign_up">
        <action
            android:id="@+id/action_sign_up_to_sign_in"
            app:destination="@id/sign_in"
            app:popUpTo="@id/auth_graph"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/confirm_email"
        android:name="com.ren.auth.internal.presentation.ui.fragments.ConfirmEmailFragment"
        android:label="@string/confirm_email_screen"
        tools:layout="@layout/fragment_confirm_email">
        <action
            android:id="@+id/action_confirm_email_to_sign_in"
            app:destination="@id/sign_in"
            app:popUpTo="@id/auth_graph"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/sign_in"
        android:name="com.ren.auth.internal.presentation.ui.fragments.SignInFragment"
        android:label="@string/sign_in"
        tools:layout="@layout/fragment_sign_in">
        <action
            android:id="@+id/action_sign_in_to_sign_up"
            app:destination="@id/sign_up"
            app:popUpTo="@id/auth_graph"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_sign_in_to_emailConfirmFragment"
            app:destination="@id/emailConfirmFragment" />
    </fragment>
    <fragment
        android:id="@+id/resetPasswordFragment"
        android:name="com.ren.auth.internal.presentation.ui.fragments.ResetPasswordFragment"
        android:label="fragment_reset_passowrd"
        tools:layout="@layout/fragment_reset_passowrd" >
        <argument
            android:name="code"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null"/>
        <action
            android:id="@+id/action_resetPasswordFragment_to_sign_in"
            app:destination="@id/sign_in" />
    </fragment>
    <fragment
        android:id="@+id/emailConfirmFragment"
        android:name="com.ren.auth.internal.presentation.ui.fragments.EmailConfirmFragment"
        android:label="fragment_email_confirm"
        tools:layout="@layout/fragment_email_confirm" >
        <action
            android:id="@+id/action_emailConfirmFragment_to_resetPasswordCodeFragment"
            app:destination="@id/resetPasswordCodeFragment" />
    </fragment>
    <fragment
        android:id="@+id/resetPasswordCodeFragment"
        android:name="com.ren.auth.internal.presentation.ui.fragments.ResetPasswordCodeFragment"
        android:label="fragment_reset_password_code"
        tools:layout="@layout/fragment_reset_password_code" >
        <action
            android:id="@+id/action_resetPasswordCodeFragment_to_resetPasswordFragment"
            app:destination="@id/resetPasswordFragment" />
    </fragment>

</navigation>