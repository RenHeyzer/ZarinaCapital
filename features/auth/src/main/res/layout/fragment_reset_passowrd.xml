<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/padding_16"
    tools:context=".internal.presentation.ui.fragments.ResetPasswordFragment">

    <Space
        android:layout_width="wrap_content"
        android:layout_height="100dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/new_password"
        style="@style/Widget.TextInputLayout.OutlinedBox.Overlay"
        android:layout_marginTop="@dimen/margin_8"
        app:endIconDrawable="@drawable/ic_password_visibility"
        app:endIconMode="password_toggle"
        app:endIconTint="@color/dark_grey"
        app:expandedHintEnabled="false"
        app:hintEnabled="false"
        app:placeholderText="@string/new_password">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_new_password"
            style="@style/Widget.TextInputEditText.OutlinedBox.Overlay"
            android:inputType="textEmailAddress" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/confirm_new_password"
        style="@style/Widget.TextInputLayout.OutlinedBox.Overlay"
        android:layout_marginTop="@dimen/margin_8"
        app:endIconDrawable="@drawable/ic_password_visibility"
        app:endIconMode="password_toggle"
        app:endIconTint="@color/dark_grey"
        app:expandedHintEnabled="false"
        app:hintEnabled="false"
        app:placeholderText="@string/confirm_passowrd">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_confirm_new_password"
            style="@style/Widget.TextInputEditText.OutlinedBox.Overlay"
            android:inputType="textPassword"
            android:paddingVertical="@dimen/padding_16" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_reset_password"
        style="@style/Widget.MaterialButton.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_40"
        android:text="@string/next" />
</LinearLayout>