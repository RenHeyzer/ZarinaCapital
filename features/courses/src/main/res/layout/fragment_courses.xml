<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".api.presentation.ui.fragments.CoursesFragment">

    <EditText
        android:id="@+id/et_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10"
        android:background="@drawable/rounder_search_view"
        android:drawableStart="@drawable/search"
        android:drawablePadding="@dimen/margin_10"
        android:fontFamily="@font/inter_regular"
        android:hint="@string/searchCourses"
        android:padding="@dimen/margin_10"
        android:textColorHint="@color/grey_7"
        android:textSize="@dimen/text_size_medium" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rec_courses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_10"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_courses" />
</LinearLayout>