<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".internal.presentation.ui.profile.EditProfileFragment">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/im_profile"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/margin_15"
            android:theme="@style/ShapeAppearance.Material3.Corner.Full"
            app:srcCompat="@drawable/ic_launcher_background" />

    <ImageButton
        android:id="@+id/im_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="@dimen/margin_30"
        android:layout_marginTop="@dimen/margin_10"
        android:background="@drawable/lucide_pen"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_15"
            android:layout_marginBottom="@dimen/margin_5"
            android:fontFamily="@font/inter_regular"
            android:text="@string/username"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/text_size_medium" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_name"
            style="@style/Widget.TextInputLayout.OutlinedBox.Overlay"
            android:layout_marginTop="@dimen/margin_8"
            app:expandedHintEnabled="false"
            app:hintEnabled="false"
            app:placeholderText="@string/full_name_hint">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_name"
                style="@style/Widget.TextInputEditText.OutlinedBox.Overlay"
                android:inputType="textPersonName" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_15"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_marginBottom="@dimen/margin_5"
            android:fontFamily="@font/inter_regular"
            android:text="@string/phoneNumber"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/text_size_medium" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_phone"
            style="@style/Widget.TextInputLayout.OutlinedBox.Overlay"
            android:layout_marginTop="@dimen/margin_8"
            app:expandedHintEnabled="false"
            app:hintEnabled="false"
            app:prefixText="@string/phone_number_prefix"
            app:prefixTextAppearance="@style/TextAppearance.AppCompat.Inter.Small"
            app:prefixTextColor="@color/black">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_number"
            style="@style/Widget.TextInputEditText.OutlinedBox.Overlay"
            android:digits="1234567890"
            android:inputType="phone"
            android:paddingVertical="@dimen/padding_16" />

        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_15"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_marginBottom="@dimen/margin_5"
            android:fontFamily="@font/inter_regular"
            android:text="@string/email"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/text_size_medium" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_email"
            style="@style/Widget.TextInputLayout.OutlinedBox.Overlay"
            android:layout_marginTop="@dimen/margin_8"
            app:expandedHintEnabled="false"
            app:hintEnabled="false"
            app:placeholderText="@string/email_hint">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_email"
                style="@style/Widget.TextInputEditText.OutlinedBox.Overlay"
                android:inputType="textEmailAddress" />

        </com.google.android.material.textfield.TextInputLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="70dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_15"
            android:background="@drawable/rounder_button"
            android:fontFamily="@font/inter_medium"
            android:backgroundTint="@color/red"
            android:text="@string/save_changes"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_pre_medium"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

</FrameLayout>