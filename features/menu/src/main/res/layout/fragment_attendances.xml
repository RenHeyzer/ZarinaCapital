<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".internal.presentation.ui.attandences.AttendancesFragment">

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_10"
        android:background="@drawable/rounder_button"
        android:backgroundTint="@color/light_grey_f3"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/margin_5">

        <RadioButton
            android:id="@+id/rb_lessons"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:button="@null"
            android:fontFamily="@font/inter_medium"
            android:gravity="center"
            android:padding="@dimen/margin_10"
            android:text="@string/lesson"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_pre_medium" />

        <RadioButton
            android:id="@+id/rb_visit"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:button="@null"
            android:fontFamily="@font/inter_medium"
            android:background="@drawable/rounder_button_white"
            android:gravity="center"
            android:padding="@dimen/margin_10"
            android:text="@string/visit"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_pre_medium" />

    </RadioGroup>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_10"
        android:backgroundTint="@color/light_grey_f3"
        app:cardCornerRadius="@dimen/margin_10">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/keyboard_arrow_left" />

                <Space
                    android:layout_width="@dimen/space_80"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/text_size_medium"
                    android:text="Февраль 2024" />

                <Space
                    android:layout_width="@dimen/space_80"
                    android:layout_height="wrap_content" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:background="@drawable/keyboard_arrow_right" />
            </LinearLayout>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_20" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rec_attendances"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_10"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_attendances" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:padding="@dimen/margin_5"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_pre_medium"
                    android:textStyle="bold"
                    android:text="@string/result"
                    android:layout_marginStart="@dimen/margin_25" />

                <Space
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_5"
                    android:fontFamily="@font/inter_regular"
                    tools:text="10"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_medium"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_25"
                    android:fontFamily="@font/inter_regular"
                    android:text="посещений"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_medium"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>