<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".internal.presentation.ui.editpassword.EditPasswordFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_20"
        android:background="@drawable/ed"
        tools:ignore="ContentDescription" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="20dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_marginHorizontal="@dimen/margin_15"
        android:layout_marginTop="@dimen/margin_15"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_old_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounder_button"
            android:backgroundTint="@color/light_grey_f3"
            android:fontFamily="@font/inter_medium"
            android:hint="@string/old_password"
            android:padding="@dimen/margin_15"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_medium"
            tools:ignore="Autofill,TextFields" />

        <ImageView
            android:id="@+id/eye_old_password"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/eys"
            android:elevation="1dp"
            android:paddingHorizontal="5dp"
            android:layout_marginEnd="10dp"
            android:layout_gravity="end|center"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_marginHorizontal="@dimen/margin_15"
        android:layout_marginTop="@dimen/margin_15"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

    <EditText
        android:id="@+id/et_new_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounder_button"
        android:backgroundTint="@color/light_grey_f3"
        android:fontFamily="@font/inter_medium"
        android:hint="@string/new_password"
        android:padding="@dimen/margin_15"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_medium"
        tools:ignore="Autofill,TextFields" />

        <ImageView
            android:id="@+id/eye_new_password"

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/eys"
            android:elevation="1dp"
            android:paddingHorizontal="5dp"
            android:layout_marginEnd="10dp"
            android:layout_gravity="end|center"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_marginHorizontal="@dimen/margin_15"
        android:layout_marginTop="@dimen/margin_15"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_repeat_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounder_button"
            android:backgroundTint="@color/light_grey_f3"
            android:fontFamily="@font/inter_medium"
            android:hint="@string/repeat_password"
            android:padding="@dimen/margin_15"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_medium"
            tools:ignore="Autofill,TextFields" />

        <ImageView
            android:id="@+id/eye_repeat_password"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/eys"
            android:elevation="1dp"
            android:paddingHorizontal="5dp"
            android:layout_marginEnd="10dp"
            android:layout_gravity="end|center"/>

    </FrameLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="@dimen/space_80" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_15"
        android:background="@drawable/rounder_button"
        android:fontFamily="@font/inter_medium"
        android:backgroundTint="@color/red"
        android:text="@string/save_new_password"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_pre_medium"
        />

</LinearLayout>