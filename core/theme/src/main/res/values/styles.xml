<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Material3.BottomNavigationView.ActiveIndicator.Custom" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/white</item>
    </style>

    <style name="TextAppearance.AppCompat.Inter.VerySmall" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:textSize">@dimen/text_size_very_small</item>
    </style>

    <style name="TextAppearance.AppCompat.Inter.Small" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="TextAppearance.AppCompat.Inter.Regular.PreMedium" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:textSize">@dimen/text_size_pre_medium</item>
    </style>

    <style name="TextAppearance.AppCompat.Inter.Bold.PreMedium" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/inter_bold</item>
        <item name="android:textSize">@dimen/text_size_pre_medium</item>
    </style>

    <style name="TextAppearance.AppCompat.Inter.Regular.Medium" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="TextAppearance.AppCompat.Inter.Bold.Medium" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/inter_bold</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="TextAppearance.AppCompat.Inter.Title" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/inter_bold</item>
        <item name="android:textSize">@dimen/text_size_title</item>
    </style>

    <style name="Widget.TextInputLayout.OutlinedBox.Overlay" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxCornerRadiusTopStart">@dimen/box_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/box_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/box_corner_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/box_corner_radius</item>
        <item name="boxBackgroundColor">@color/light_grey_5</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="errorTextAppearance">@style/TextAppearance.AppCompat.Inter.VerySmall</item>
        <item name="errorTextColor">@color/red</item>
        <item name="cursorColor">@color/black</item>
        <item name="cursorErrorColor">@color/red</item>
        <item name="hintTextAppearance">@style/TextAppearance.AppCompat.Inter.Small</item>
        <item name="hintTextColor">@color/dark_grey</item>
        <item name="boxStrokeWidth">@dimen/box_stroke_width</item>
        <item name="boxStrokeColor">@color/light_grey_5</item>
        <item name="boxStrokeErrorColor">@color/red</item>
        <item name="android:textColorHint">@color/dark_grey</item>
        <item name="placeholderTextAppearance">@style/TextAppearance.AppCompat.Inter.Small</item>
        <item name="placeholderTextColor">@color/dark_grey</item>
    </style>

    <style name="Widget.TextInputEditText.OutlinedBox.Overlay" parent="ThemeOverlay.Material3.TextInputEditText.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHighlight">@android:color/transparent</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Inter.Small</item>
    </style>

    <style name="Widget.MaterialButton.Primary" parent="Widget.Material3.Button.ElevatedButton">
        <item name="android:backgroundTint">@color/red</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Inter.Bold.PreMedium
        </item>
        <item name="elevation">@dimen/button_elevation</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:insetTop">@dimen/button_inset</item>
        <item name="android:insetBottom">@dimen/button_inset</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
    </style>

</resources>